<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.negozio.infoRicevutaController">
   <children>
      <ImageView fitHeight="550.0" fitWidth="450.0">
         <image>
            <Image url="@../../../resources/backgroundRiparazione.png" />
         </image>
      </ImageView>
      <VBox prefHeight="550.0" prefWidth="450.0">
         <children>
            <HBox alignment="CENTER" prefHeight="93.0" prefWidth="411.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="72.0" prefWidth="280.0" text="PAGA RIPARAZIONE" textOverrun="CENTER_ELLIPSIS">
                     <font>
                        <Font name="Gill Sans MT Ext Condensed Bold" size="60.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="50.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="95.0" prefWidth="450.0">
               <children>
                  <Button fx:id="backButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleBackButton" text="Indietro">
                     <font>
                        <Font name="Gill Sans MT Condensed" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="250.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="avantiButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#handleAvanti" text="Paga">
                     <font>
                        <Font name="Gill Sans MT Condensed" size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="tableView" prefHeight="227.0" prefWidth="466.0">
              <columns>
                <TableColumn fx:id="nome" prefWidth="75.0" text="NOME" />
                <TableColumn fx:id="cognome" prefWidth="96.0" text="COGNOME" />
                  <TableColumn fx:id="serialeSmartphone" prefWidth="99.0" text="SERIALE" />
                  <TableColumn fx:id="modelloSmartphone" prefWidth="119.0" text="MODELLO" />
                  <TableColumn fx:id="costoRip" prefWidth="60.0" text="COSTO" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
